<% cache(activity) do %>
  <% owner = activity.owner %>
  <% comment = activity.trackable %>
  <div id="notification_<%= activity.id %>" class="notification <%= unread_class(activity) %>" data-id="<%= activity.id %>">
    <div class="badge">
      <%= image_tag "Images/icons/tagged.png", class: "icon", alt: "Mention" %>
    </div>
    <div class="text-body-notifications">
      <span class="author">
        <% if defined?(hide_name) %>
          <%= t('.someone') %>
        <% else %>
          <%= render 'public_activity/user', user: activity.owner %>
        <% end %>
      </span>
      <span><%= t('activity.comment.mention') %></span>
      <span><%= comment.game.title %></span>
      <div class="hoveron">
        [<span data-time class="cw-relative-date" timestamp="<%= activity.created_at.strftime("%Y/%m/%d %H:%M:%S %z") %>"></span>]
      </div>
    </div>

		<div class="links-notifications">
			<!-- TO ADD HERE ALSO THE ICON TO FOLLOW A GAME (IF IT IS NOT ALREADY FOLLOWED) -->
			<%= link_to game_url(comment.game.slug) do %>
				<%= image_tag 'Images/icons/view.png' %>
			<% end %>
		</div>
		<hr/>
	</div>
<% end %>
