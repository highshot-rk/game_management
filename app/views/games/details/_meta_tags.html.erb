<link rel="canonical" href="<%= game_url(id: @game.slug) %>"/>
<!-- Feed RSS -->
<link rel="alternate" type="application/rss+xml" title="<%= @game.title %> - indiexpo" href="<%= news_feed_path(id: @game.slug, format: :xml, locale: nil) %>" />

<meta name="description" content="<%= @game.seo_description %>" />
<meta name="keywords" content="<%= @game.title %>, <%= @game.author %>, <%= t("genres.genre.#{@game.genre.name.downcase.gsub(/[^a-z]+/, '')}") %>, <%= @game.tool.name %>, <%= t('application.meta_tags.keywords') %>" />

<!-- META TAG OG - Facebook-->
<meta property="fb:app_id" content="<%= Settings.social.facebook.app_id %>" />
<meta property="fb:admins" content="<%= Settings.social.facebook.admins %>">
<meta property="og:title" content="<%= @game.title %>" />
<meta property="og:type" content="game" />
<meta property="og:url" content="<%= game_url(@game.slug) %>"/>
<meta property="og:image" content="<%= @game.image(:large) %>"/>
<meta property="og:description" content="<%= @game.seo_description %>" />
<meta property="og:site_name" content="www.indiexpo.net" />

<!-- META TAG Twitter -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@indiexpo_net">
<meta name="twitter:creator" content="@indiexpo_net">
<meta name="twitter:url" content="<%= game_url(@game.slug) %>">
<meta name="twitter:title" content="<%= @game.title %>">
<meta name="twitter:description" content="<%= @game.seo_description %>">
<meta name="twitter:image" content="<%= @game.image %>">
<!-- END META TAG -->
