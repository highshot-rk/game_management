<meta http-equiv="content-type" content="text/html; charset=UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
<% if ENV['DEVELOPMENT_WEBSITE'] %>
	<meta name="robots" content="noindex,nofollow"/>
<% end %>
<% if current_user %>
	<meta name="current-user" content="true">
<% end %>
<link as="script" href="<%= asset_url('application.js') %>" rel="prefetch">
<link as="style" href="//fonts.googleapis.com/css?family=Play" rel="preload">
<!--[if IE]>
	<link href="//fonts.googleapis.com/css?family=Play" rel="stylesheet" type="text/css">
<![endif]-->

<% if Rails.env.production? %>
	<style type="text/css" media="all"><%= inline_asset('application.css') %></style>
<% else %>
	<%= stylesheet_link_tag 'application', media: 'all' %>
<% end %>
<% if I18n.locale == :fa %>
	<%= stylesheet_link_tag 'rtl/rtl', media: 'all' %>
<% end %>
<%= csrf_meta_tags %>
<!-- Favicon -->
<link rel="apple-touch-icon" sizes="180x180" href="<%= asset_path 'Images/Favicon/apple-touch-icon-180x180.png' %>">
<link rel="icon" type="image/png" href="<%= asset_path 'Images/Favicon/favicon-32x32.png' %>" sizes="32x32">
<link rel="icon" type="image/png" href="<%= asset_path 'Images/Favicon/favicon-16x16.png' %>" sizes="16x16">
<link rel="manifest" href="/manifest.json">
<link rel="shortcut icon" type="image/png" href="<%= asset_path 'Images/Favicon/favicon-32x32.png' %>">
<%= favicon_link_tag asset_path('Images/Favicon/favicon-32x32.png'), :rel => 'icon', :type =>  'image/png' %>
<link rel="mask-icon" href="<%= asset_path 'Images/Favicon/safari-pinned-tab.svg' %>">
<meta name="msapplication-TileColor" content="#09090b">
<meta name="msapplication-config" content="<%= asset_path 'Images/Favicon/browserconfig.xml' %>">
<!-- Favicon END -->
<!-- Color the browser elements -->
<!-- Chrome, Firefox OS and Opera -->
<meta name="theme-color" content="#162737">
<!-- Windows Phone -->
<meta name="msapplication-navbutton-color" content="#162737">
<!-- iOS Safari -->
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<!-- Color the browser elements END -->

<% if Rails.env.production? %>
	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		ga('create', 'UA-71765582-1', 'www.indiexpo.net');

		<% if current_user %>
			ga('set', 'userId', "<%= current_user.username %>");
		<% end %>
		ga('send', 'pageview');
	</script>
<% end %>
