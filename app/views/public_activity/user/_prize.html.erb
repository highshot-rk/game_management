<% user = activity.trackable %>
	<div id="notification_<%= activity.id %>" class="notification <%=  unread_class(activity)%>" data-id="<%= activity.id %>">
		<div class="badge">
			<%= image_tag "Images/icons/points.png", class: 'icon', alt: 'Points' %>
		</div>
		<div class="text-body-notifications">
			<span><%= activity.owner.username.capitalize %> confirmed your Donation</span>
			<div class="hoveron">
				[<span data-time class="cw-relative-date" timestamp="<%= activity.created_at.strftime("%Y/%m/%d %H:%M:%S %z") %>"></span>]
			</div>
		</div>

		<div class="links-notifications">
      <%= link_to "Download prize #{activity.trackable.prize}", activity.trackable.prize == 1 ? activity.trackable.game.monetisation.prize_one_file.url : activity.trackable.game.monetisation.prize_two_file.url, target: "_blank", download: '', class: "Botton right" %>
		</div>
		<hr>
	</div>
